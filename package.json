{
	"name": "Instant-Eat",
	"version": "1.0.0",
	"description": "Proyecto dedicado a la resoluci√≥n del \"Problema del Repartidor\" para la asignatura de Infraestructura Virtual",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"clean": "rm -dr ./build ./tmp ../tmp",
		"start": "npm run build && node build/index.js",
		"test": "mocha -r ts-node/register ./test/**/*.test.ts",
		"docker-build": "docker build . -t instant-eat",
		"docker-test": "npm run docker-build && docker run -t -v \"`pwd`:/app/test\" instant-eat",
		"check": "tsc --noEmit",
		"lint": "eslint . --ext .ts",
		"lint-and-fix": "eslint . --ext .ts --fix",
		"prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
	},
	"repository": {
